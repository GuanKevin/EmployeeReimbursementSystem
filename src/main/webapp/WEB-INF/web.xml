<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0" >
	
	<servlet>
		<servlet-name>LoginPage</servlet-name>
		<servlet-class>com.revature.ERS.Web.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginPage</servlet-name>
		<url-pattern>LoginPage.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>com.revature.ERS.Web.FrontController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Error</servlet-name>
		<servlet-class>com.revature.ERS.Web.ErrorPage</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Error</servlet-name>
		<url-pattern>Error.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ReimbursementSubmissionForm</servlet-name>
		<servlet-class>com.revature.ERS.Web.ErrorPage</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ReimbursementSubmissionForm</servlet-name>
		<url-pattern>ReimbursementSubmissionForm.do</url-pattern>
	</servlet-mapping>
	
 	<error-page>
		<error-code>404</error-code>
		<location>/UserAccess/Error.jsp</location>	
	</error-page> 
	
</web-app>
	
